@model IEnumerable<CMP1005_JobTracker.Models.Reminder>

@{
    ViewData["Title"] = "Reminder Page";
}

<h1>Manage Reminders</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.RemId">
                    @Html.DisplayFor(modelItem => item.Detail)
                </a>
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.DateTime)*@
                @Convert.ToDateTime(item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jobs.Company)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RemId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.RemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
